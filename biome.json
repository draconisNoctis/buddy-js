{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "css": {
        "formatter": {
            "enabled": false
        },
        "linter": {
            "enabled": false
        },
        "parser": {
            "cssModules": true
        }
    },
    "files": {
        "ignore": ["**/*.js", "**/*.mjs", "**/*.cjs", "**/*.d.ts", "**/*.gql", "packages/cli/oclif.manifest.json"],
        "maxSize": 2097152
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 140
    },
    "graphql": {
        "formatter": {
            "enabled": false
        },
        "linter": {
            "enabled": false
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSameLine": true,
            "quoteProperties": "asNeeded",
            "quoteStyle": "single",
            "trailingCommas": "none"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        },
        "parser": {
            "allowComments": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noBannedTypes": "warn",
                "noForEach": "warn",
                "noUselessSwitchCase": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "noUndeclaredDependencies": "off"
            },
            "style": {
                "noInferrableTypes": "warn",
                "noNamespace": "off",
                "noNonNullAssertion": "off",
                "noParameterAssign": "warn"
            },
            "suspicious": {
                "noConfusingVoidType": "warn",
                "noConsoleLog": "error",
                "noDebugger": "error",
                "noEmptyBlockStatements": "off",
                "noEmptyInterface": "off",
                "noExplicitAny": "error",
                "noRedeclare": "off",
                "noShadowRestrictedNames": "off",
                "useAwait": "error"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "clientKind": "git",
        "defaultBranch": "main",
        "enabled": true,
        "useIgnoreFile": true
    }
}
