{
    "compilerOptions": {
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitOverride": true,
        "target": "es2022",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*"]
}
